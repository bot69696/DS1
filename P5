In terminal 1:
>create table exporteddata (deptid INT, deptname VARCHAR(20));
Termi 2: > sqoop export --connect jdbc:mysql://localhost:3306/retail_db
--username root --password cloudera --table exporteddata
--export-dir /user/cloudera/departments/part-m-* or part*;
Termi 1: select * from exporteddata;

